<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mp3player.controller.ControlPaneController">
   <children>
        <Slider fx:id="songSlider">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Slider>
      <HBox alignment="CENTER_LEFT">
          <children>
              <Button id="prev" fx:id="prevButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" HBox.hgrow="NEVER" />
              <ToggleButton id="play" fx:id="playButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" HBox.hgrow="NEVER" />
              <Button id="next" fx:id="nextButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" HBox.hgrow="NEVER" />
              <Slider fx:id="volumeSlider" HBox.hgrow="NEVER">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Slider>
          </children>
      </HBox>
   </children>
</VBox>
